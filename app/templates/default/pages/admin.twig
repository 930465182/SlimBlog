{% extends 'base.twig' %}

{% block body %}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        {% for error in messages.error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ error }}
        </div>
        {% endfor %}

        <form action="{{ path_for('admin-login') }}" method="POST">
            <div class="form-group">
                <label for="username">{% trans %}Username{% endtrans %}</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="{% trans %}Username{% endtrans %}" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="{% trans %}Password{% endtrans %}" required autocomplete="off">
            </div>

            <button class="btn btn-primary">{% trans %}Login{% endtrans %}</button>
        </form>
    </div>
</div>

{% endblock %}
