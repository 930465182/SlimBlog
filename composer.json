{
    "name": "fdisotto/SlimBlog",
    "description": "Simple Blog written with Slim Framework 3",
    "license": "GPLv3",
    "authors": [
        {
            "name": "Fabio Di Sotto",
            "email": "fabio.disotto@gmail.com",
            "homepage": "http://fdisotto.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "require": {
        "php": ">=5.6",
        "slim/slim": "^3.0",
        "slim/twig-view": "^2.0",
        "slim/flash": "^0.1",
        "illuminate/database": "^5.0",
        "erusev/parsedown": "^1.0",
        "symfony/var-dumper": "^3.3",
        "twig/extensions": "^1.5",
        "symfony/translation": "^3.3",
        "symfony/twig-bridge": "^3.3"
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 777 storage/cache"
        ],
        "post-update-cmd": [
            "rm -rf storage/cache/*"
        ]
    }
}
